<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="http://bootswatch.com/4/litera/bootstrap.min.css" rel="stylesheet">
    <title>SignUp</title>
</head>
<body>
        <div class="row mt-5">
                <div class="col-md-6 m-auto">
                  <div class="card card-body">
                    <h1 class="text-center mb-3">
                      <i class="fas fa-user-plus"></i> Register
                    </h1>
                    <% include ../partials/message %>
                    <form action="/student/register" method="POST">
                      <div class="form-group">
                        <label for="fname">First Name</label>
                        <input
                          type="name"
                          id="name"
                          name="fname"
                          class="form-control"
                          placeholder="Enter First Name"
                          value="<%= typeof fname != 'undefined' ? fname : '' %>"
                        />
                    </div>
                        <div class="form-group">
                        <label for="lname">Last Name</label>
                        <input
                          type="name"
                          id="fname"
                          name="lname"
                          class="form-control"
                          placeholder="Enter  Last Name"
                          value="<%= typeof lname != 'undefined' ? lname : '' %>"
                        />
                      </div>
                      <div>
                            <label for="dob">Date Of Birth</label>
                            <input
                              type="date"
                              id="dob"
                              name="dob"
                              class="form-control"
                              placeholder="Date Of Birth"
                            />
                          </div>
                          <div class="form-group">
                                <label for="lname">Gender</label><br>
                                <label>Male</label> 
                                <input
                                  type="radio"
                                  id="mgender"
                                  name="gender"
                                  class=""
                                  value="M"
                                />
                                <label>Female</label> 
                                <input
                                  type="radio"
                                  id="fgender"
                                  name="gender"
                                  class=""
                                  value="F"
                                />
                              </div>
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input
                          type="email"
                          id="email"
                          name="email"
                          class="form-control"
                          placeholder="Enter Email"
                          value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input
                          type="password"
                          id="password"
                          name="password"
                          class="form-control"
                          placeholder="Create Password"
                          value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input
                          type="password"
                          id="password2"
                          name="password2"
                          class="form-control"
                          placeholder="Confirm Password"
                          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                        />
                      </div>
                      <button type="submit" class="btn btn-primary btn-block">
                        Register
                      </button>
                    </form>
                    <p class="lead mt-4">Have An Account? <a href="/student/login">Login</a></p>
                  </div>
                </div>
              </div>
              
</body>
</html>